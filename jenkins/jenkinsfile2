pipelibe{
    agent any
    stages {
        stade('Checkout') {
            steps { Checkout scm
            }
        }
        stage('scan code with sonarQube') {
            steps {
               withSonarQubeEnv('My SonarQube Server') {
                   sh """
                     sonar-scanner \
                          -Dsonar.projectKey=my_project \
                          -Dsonar.sources=.
                   """
                   
                   'sonar-scanner -Dsonar.projectKey=my_project -Dsonar.sources=.'
               }
            }
        }
        stage('Build docker image') {
            steps {
                echo 'Building...'
            }
        }
        stage ('scan image for vulnerabilities and malware and push to registry') {
            steps {
                echo 'Scanning...'
            }
        }
        stage('Test application ') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy application to kubernetes cluster') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}